<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OGSToolBox.Views.Ruoyi">
    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="上师嘉高选课系统登录" FontSize="30" Margin="15, 0"/>
            <Frame Grid.Row="2" Padding="0" BorderColor="Transparent" CornerRadius="30" Background="#11000055">
                <Entry Text="{Binding Username}" Placeholder="请输入账号" Margin="15,0"/>
            </Frame>
            <Frame Grid.Row="4" Padding="0" BorderColor="Transparent" CornerRadius="30" Background="#11000055">
                <Entry Text="{Binding Passwd}" Placeholder="请输入密码" IsPassword="True" Margin="15,0"/>
            </Frame>
            <Button Grid.Row="6" Text="登录" Command="{Binding RuoyiLogin}" Margin="15, 0"/>
        </Grid>
    </StackLayout>

</ContentPage>
